{
  "compilerOptions": {
    "target": "ES2022", // Set target to ES2020 or ES2022
    "module": "NodeNext", // Use ESNext for native module support
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist", // Ensure output goes to dist folder
    "skipLibCheck": true, // Optional: speeds up the build
    "noEmit": false, // Ensure TypeScript emits files for Lambda
    "strict": true,
    "baseUrl": "./code",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "allowJs": false,
    "sourceMap": true, // Optional: useful for debugging
    "declaration": true, // Optional: generate type declarations
    "declarationMap": true
  },
  "include": ["code/**/*.ts"]
}
